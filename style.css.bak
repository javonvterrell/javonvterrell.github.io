*{
	margin: 0;
	padding: 0;
	font-family: 'Sigmar One', cursive;
}
#banner{
	background: linear-gradient(rgba(0,0,0,0.5),#FF9688),url(pictures/waves.jpg);
	background-size: cover;
	background-position: center;
	height: 100vh;
	
}
.logo{
	width: 140px;
	position: absolute;
	top: 4%;
	left: 10%;
}
.banner-text{
	text-align: center;
	color: #fff;
	padding-top: 180px;	
}
.banner-text h3{
	font-size: 55px;
	font-family: 'Notable', sans-serif;
}
.banner-text h1{
	font-size: 80px;
}
.banner-text p{
	font-size: 20px;
	font-style: italic;
	font-family: 'Kaushan Script', cursive;
}
.banner-btn{
	margin: 70px auto 0;
}
.banner-btn a{
	width: 150px;
	text-decoration: none;
	display: inline-block;
	margin: 0 10px;
	padding: 12px 0;
	color: #fff;
	border: .5px solid #fff;
	position: relative;
	z-index: 1;
}
.banner-btn a span{
	width: 50%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	background: #fff;
	z-index: -1;
}
